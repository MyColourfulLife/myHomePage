<!-- 内容分类 -->
<div class="panel panel-success col-md-4">

    <div class="panel-heading">
        <h3 class="panel-title">分类导航</h3>
    </div>

    <div class="list-group" v-for="item in categories">
        <a v-bind:href="item.url" class="list-group-item ">
            {{item.type}}
        </a>
    </div>


    <!-- 按钮触发模态框 -->
<!-- 模态框（Modal） -->
