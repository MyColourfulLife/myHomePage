		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
					&times;
				</button>
                
                <img src="images/QRC.jpg" alt="IJustLikeYou">
                
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal -->
</div>



    <script>

        var vm = new Vue({
            el: '#app',
            data: {
                top10Items: [],
                categories: []
            },
            methods: {
                fetchTop10() {
                    axios.get('/api/top10')
                        .then(function (res) {
                            vm.top10Items = res.data.items;
                            vm.top10Items.forEach(function (element) {
                                element.url = '/posts/show?id=' + element._id;
                            });
                        }).catch(function (error) {
                            console.log(error);
                        });
                },
                fetchCategories() {
                    axios.get('/api/posts/categories')
                        .then(function (res) {
                            vm.categories = res.data.categorylist;
                            vm.categories.forEach(function (element) {
                                element.url = '/posts/category?id=' + element._id + '&type=' + element.type;
                            }, this);
                            console.log(vm.categories,'vm.categories');
                        })
                        .catch(function (err) {
                            alert(err.message);
                        });
                },
                showImg() {

                }
            }
        });

        vm.fetchTop10();
        vm.fetchCategories();

    </script>